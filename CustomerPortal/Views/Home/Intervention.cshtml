@{
    ViewData["Title"] = "Intervention Form";
}
<center>
     <script src="~/js/site.js" asp-append-version="true"></script>
<h1>@ViewData["Title"]</h1>
</center>
<div class="tab-content" id="submission-tabContent">        

    <fieldset>
        <input type="hidden" name="action" value="intervention_send" />
        @
        </br>
        <div class="col-md-4 mx-auto text-center">
            <label for="intervention_building"><b>Building</b></label>
            <select id="select_building" onChange="change_building()" class="form-control pointer text-center" name="intervention[building_id]" required>
                <option value="">--- Select One ---</option>
            </select>
        </div>
        </br>
        <div class="col-md-4 mx-auto col text-center">
            <label for="intervention_battery"><b>Battery</b></label>
            <select id="select_battery" onChange="change_battery()" class="form-control pointer text-center" name="intervention[battery_id]" required>
                <option value="">--- Select One ---</option>
            </select>
        </div>
        </br>
        <div class="col-md-4 mx-auto text-center">
            <label for="intervention_column"><b>Column</b></label>
            <select id="select_column" onChange="change_column()" class="form-control pointer text-center" name="intervention[column_id]" required>
                <option value="">--- Select One ---</option>
                <option value="Nil">None</option>
            </select>
        </div>
        </br>
        <div class="col-md-4 mx-auto text-center">
            <label for="intervention_elevator"><b>Elevator</b></label>
            <select id="elevator" class="form-control pointer text-center" name="intervention[elevator_id]" required>
                <option value="">--- Select One ---</option>
                <option value="Nil">None</option>
            </select>
        </div>
        </br>
        </br>
        <div class="col-md-4 mx-auto text-center">   
            <button type="submit" class="btn btn-primary " >Submit Intervention</button>
        </div>
    </fieldset>
</div>
